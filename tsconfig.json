{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDirs": ["src/"],
        "outDir": "dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "files": [
        "./src/custom.d.ts",
    ],
    "include": [
        "src/**/*.ts"
    ],
}
